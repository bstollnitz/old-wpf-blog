<?Mapping XmlNamespace="local" ClrNamespace="SelectedValueSample" ?>
<Window x:Class="SelectedValueSample.Window1"
    xmlns="http://schemas.microsoft.com/winfx/avalon/2005"
    xmlns:x="http://schemas.microsoft.com/winfx/xaml/2005"
	xmlns:local="local" 
    Title="SelectedValueSample"
	SizeToContent="WidthAndHeight"
    >
	
	<Border Margin="30" BorderBrush="Blue" BorderThickness="2" Padding="10">
		<StackPanel Name="mainStackPanel">
			<ListBox ItemsSource="{Binding}" DisplayMemberPath="Name" SelectedValue="Messenger of the Gods" SelectedValuePath="Description" Name="listBox1" Margin="5"/>
			<Button Click="BtnClick" Margin="5">Inspect selection</Button>
		</StackPanel>
	</Border>

</Window>
